/* pages/music-player/music-player.wxss */
.bg-cover, .bg-image{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -1;
}

.bg-cover{
  background-color: rgba(0,0,0,.5);
  backdrop-filter: blur(20px);
}

.center{
  display: flex;
  color: #999;
  font-size: 28rpx;
}

.divider{
  margin: 0 10rpx;
}

.active{
  color: #fff;
}

.music{
  color: #fff;
  box-sizing: border-box;
  padding: 40rpx 60rpx;
  display: flex;
  flex-direction: column;
}

.cover .album{
  width: 100%;
  border-radius: 12rpx;
}

.copyright{
  flex: 1;
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
}

.copyright .title{
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
}

.copyright .author{
  font-size: 28rpx;
  color: #999;
}

.music .lyric{
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
  text-align: center;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.control, .progress{
  flex: 1;
}

.control{
  margin-top: 10rpx;
}

.progress .slider{
  margin: 16rpx 8rpx 12rpx 12rpx;
}

.progress .time{
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
}

.music .control{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.control .circular{
  width: 80rpx;
  height: 80rpx;
}

.previous, .next, .list{
  width: 60rpx;
  height: 60rpx;
}

.control .pause{
  width: 120rpx !important;
  height: 120rpx !important;
}

.songlyric{
  color: #999;
  font-size: 28rpx;
  text-align: center;
  height: 100%;
  
}

.songlyric .item{
  box-sizing: border-box;
  padding: 0 80rpx;
  line-height: 60px;
}