/* components/menuItem/menuItem.wxss */
.container{
  display: flex;
  width: 240rpx;
  box-sizing: border-box;
  flex-direction: column;
  margin-right: 30rpx;
}

.container .top{
  position: relative;
}

.top .image{
  width: 240rpx;
  border-radius: 15rpx;
}

.top .count{
  position: absolute;
  color: #fff;
  font-size: 28rpx;
  background: rgba(0,0,0, .5);
  line-height: 1.15;
  border-radius: 10rpx;
  padding: 5rpx 15rpx ;
  bottom: 10rpx;
  right: 0;
}

.bottom {
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}