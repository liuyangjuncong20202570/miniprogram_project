/* components/menu-header/menu-header.wxss */
.container{
  width: 100vw;
  height: 450rpx;
  color: #fff;
  position: relative;
  display: flex;
}

.bgi{
  width: 100vw;
  position: relative;
  z-index: -3;
}

.bgi .bg-cover{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  background-color: rgba(0,0,0,.5);
  backdrop-filter: blur(5px);
}

 .bgi .image{
  height: 100%;
  width: 100%;
  position: relative;
  z-index: -3;
} 

.content{
  position: absolute;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 50rpx;
}

.top{
  display: flex;
}

.content .cover{
  border-radius: 12rpx;
  width: 230rpx;
  flex-shrink: 0;
}

.bar{
  display: flex;
  align-items: center;
}

.right{
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding-left: 50rpx;
  flex-direction: column;
}

.right .avatar{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.right .name{
  font-size: 28rpx;
}

.right .desc{
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.bottom{
  margin-top: 60rpx;
  display: flex;
  justify-content: space-around;
}

.item{
  width: 48rpx;
  margin-right: 20rpx;
}

.text{
  font-size: 28rpx;
}

.share-item, .like-item{
  display: flex;
  align-items: center;
  text-align: center;
  justify-content: center;
}