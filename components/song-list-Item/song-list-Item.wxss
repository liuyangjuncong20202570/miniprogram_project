/* components/song-list-Item/song-list-Item.wxss */
.tag .item{
  display: flex;
  flex-wrap: wrap;
}

.item .container{
  flex-shrink: 0;
  box-sizing: border-box;
  width: 350rpx;
  padding-bottom: 20rpx;
}

.container:nth-last-of-type(-n+2){
  padding-bottom: 0;
}

.container .top{
  position: relative;
}

.top .count{
  font-size: 24rpx;
  color: #fff;
  border-radius: 16rpx;
  position: absolute;
  padding: 5rpx 15rpx;
  background-color: rgba(0,0,0,.5);
  bottom: 10rpx;
  right: 20rpx;
}

.top .image{
  width: 95%;
  border-radius: 18rpx;
}

.bottom{
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}